{{#ember-collection
    items=itemsInternal
    itemsContainerClass=itemsContainerClass
    buffer=displayBuffer
    cell-layout=gridLayout
    viewport-change=(action "viewportChangeAction")
    estimated-height=800
    estimated-width=1000
    isLoading=isLoading
    showMoreDataOption=showMoreDataOption
    moreDataText=moreDataText
    loadMoreData=(action "loadMoreData")
    as |item|}}
    {{yield item (action "removeItem")}}
{{/ember-collection}}